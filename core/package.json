{
  "name": "defiant-node",
  "version": "0.0.1",
  "description": "",
  "author": "Jake Laurie",
  "private": false,
  "license": "Apache",
  "scripts": {
    "server:build:proto": "yarn proto-loader-gen-types --longs=String --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=proto/gen/ ../proto/*.proto\n",
    "server:build": "rm -rf dist && yarn server:build:proto && tsc && cp ../proto/**.proto dist/proto",
    "server:start": "node ./dist/src/Application.js",
    "server:start:dev": "yarn server:build && yarn server:start --watch",
    "server:lint": "eslint -c .eslintrc.json \"{src,apps,libs,test}/**/*.ts\""
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.3.2",
    "@grpc/proto-loader": "^0.6.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.36",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
